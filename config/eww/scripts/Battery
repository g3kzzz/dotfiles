#!/bin/sh

bat=/sys/class/power_supply/BAT0/
per="$(cat "$bat/capacity")"

# Ruta de imágenes
img_path="$HOME/.config/eww/images"

# Archivo temporal para animación
frame_file="/tmp/.battery_frame"

# Archivo para evitar notificación repetida
warn_file="$HOME/.cache/battery_warned"

# Inicializa frame si no existe
[ ! -f "$frame_file" ] && echo 0 > "$frame_file"

battery_status() {
	if [ -d "$bat" ]; then
		printf "true"
	else
		printf "false"
	fi
}

# Notificación de batería baja
low_battery_warning() {
    if [ "$per" -le 10 ]; then
        # Si no existe el archivo => primera advertencia
        if [ ! -f "$warn_file" ]; then
            # notificación estilo Ubuntu
            notify-send "Low Battery" "Battery level is critically low. Please plug in your charger." -u critical

            # bajar brillo a 2%
            brightnessctl set 1%

            # registrar que ya se notificó
            touch "$warn_file"
        fi
    else
        # si sube de 10%, resetear aviso
        [ -f "$warn_file" ] && rm "$warn_file"
    fi
}

icon() {
    # Ejecutar chequeo de batería baja siempre que se pida ícono
    low_battery_warning

    if [ "$(cat "$bat/status")" = "Charging" ]; then
        # Definir frames según nivel actual
        if [ "$per" -le 10 ]; then
            frames=(min-low.png low-battery.png half-battery.png full-battery.png)
        elif [ "$per" -le 30 ]; then
            frames=(low-battery.png half-battery.png full-battery.png)
        elif [ "$per" -le 79 ]; then
            frames=(half-battery.png full-battery.png)
        else
            frames=(full-battery.png)
        fi

        total=${#frames[@]}
        frame=$(cat "$frame_file")

        echo "$img_path/${frames[$frame]}"

        # Siguiente frame (bucle)
        next=$(( (frame + 1) % total ))
        echo "$next" > "$frame_file"
        exit
    fi

    # No está cargando → ícono estático
    if [ "$per" -le 10 ]; then
        icon="min-low.png"
    elif [ "$per" -le 30 ]; then
        icon="low-battery.png"
    elif [ "$per" -le 79 ]; then
        icon="half-battery.png"
    else
        icon="full-battery.png"
    fi

    echo "$img_path/$icon"
}

percent() {
    echo "$per"
}

[ "$1" = "battery_status" ] && battery_status && exit
[ "$1" = "icon" ] && icon && exit
[ "$1" = "percent" ] && percent && exit


configuration {
    modi:                       "drun";
    font:                       "JetBrainsMono Nerd Font 10";
    display-drun:               "";
    drun-display-format:        "{icon}  {name}";
    sidebar-mode:               false;
    show-icons:                 true;
}

@theme "/dev/null"

* {
    bg:                         #061115;
    fg:                         #FFFFFF;
    button:                     #22292b;

    background-color:           @bg;
    text-color:                 @fg;
}

window {
    transparency:               "real";
    width:                      40%;
}

prompt { enabled: false; }

entry {
    placeholder:                "Search";
    placeholder-color:          @fg;
    expand:                     true;
    padding:                    1.5%;
    border-radius:              8px;
}

inputbar {
    children:                   [ prompt, entry ];
    background-image:           url("img/bg.png");
    expand:                     false;
    border-radius:              0px 0 8px 8px;
    padding:                    100px 30px 30px 300px;
}

listview {
    columns:                    1;
    lines:                      4;
    cycle:                      false;
    dynamic:                    true;
    layout:                     vertical;
    padding:                    30px 200px 30px 30px;
    spacing:                    10px;
}

mainbox {
    children: [ inputbar, listview ];
}

element {
    orientation:                horizontal;
    padding:                    10px 12px;
    spacing:                    12px;
    border-radius:              8px;
    background-color:           inherit;
}

element-icon {
    size:                       1.4em;
    margin:                     0px 8px 0px 5px;
    background-color:           inherit;
    vertical-align:             0.5;
}

element-text {
    expand:                     true;
    vertical-align:             0.5;
    margin:                     0px;
    background-color:           inherit;
    text-color:                 inherit;
}

element selected {
    background-color:           @button;
    border-radius:              8px;
}
